@model IEnumerable<Ulatina.Electiva.Classwork.Proyecto.Model.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nombre Usuario", "Index", new { sortOrder = ViewBag.NameSortParm })   
        </th>
        <th>
            @Html.ActionLink("apellido1Usuario", "Index", new { sortOrder = ViewBag.LastNameSortParm })   
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellido2Usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefonoUsuario)
        </th>
        <th>
            @Html.ActionLink("Rol Usuario", "Index", new { sortOrder = ViewBag.RolSortParm })   
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido1Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido2Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefonoUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rolUsuario)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idUsuario }) |
            @Html.ActionLink("Details", "Details", new { id=item.idUsuario }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idUsuario })
        </td>
    </tr>
}

</table>
